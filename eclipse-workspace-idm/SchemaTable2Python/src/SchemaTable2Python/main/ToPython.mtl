[query public getTablesToImport(t : Tableau) : OrderedSet(Tableau) = 
    t.getColonnesImportTable()-> collect(c|c.getTable()) -> asOrderedSet()
/]

[query public getColonnesAppelAlgo(t : Tableau) : Sequence(Colonne) = 
